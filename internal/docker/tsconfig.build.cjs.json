{
	"extends": "./tsconfig.json",
	"include": ["**/src/**/*"],
	"exclude": ["**/src/**/*.test.ts"],
	"compilerOptions": {
		"emitDeclarationOnly": false,
		"rootDir": "src",
		"outDir": "dist/cjs",
		"target": "es2020",
		"module": "CommonJS",
		"moduleResolution": "Node",
		"incremental": true,
		"tsBuildInfoFile": "dist/tsconfig.build.cjs.tsbuildinfo",
		"paths": {
			"~docker/*": ["src/*"]
		}
	}
}

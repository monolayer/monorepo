{
	"name": "@monolayer/task-sqs-adapter",
	"version": "1.0.0-pre-9",
	"description": "SQS adapter for tasks workloads (@monolayer/workloads)",
	"author": "Marcos Essindi <marcessindi@me.com>",
	"license": "MIT",
	"homepage": "https://github.com/monolayer/monorepo/packages/task-sqs-adapter",
	"bugs": "https://github.com/monolayer/monorepo/issues",
	"repository": {
		"type": "git",
		"url": "https://github.com/monolayer/monorepo/",
		"directory": "packages/task-sqs-adapter"
	},
	"type": "module",
	"files": [
		"dist/**/*.js",
		"dist/**/*.cjs",
		"dist/**/*.mjs",
		"dist/**/*.d.ts",
		"dist/**/*.d.cts",
		"dist/esm/package.json",
		"dist/cjs/package.json"
	],
	"types": "./dist/esm/index.d.ts",
	"exports": {
		".": {
			"import": {
				"types": "./dist/esm/index.d.ts",
				"default": "./dist/esm/index.js"
			},
			"require": {
				"types": "./dist/cjs/index.d.ts",
				"default": "./dist/cjs/index.js"
			}
		},
		"./handler": {
			"import": {
				"types": "./dist/esm/handler/index.d.ts",
				"default": "./dist/esm/handler/index.mjs"
			},
			"require": {
				"types": "./dist/cjs/handler/index.d.cts",
				"default": "./dist/cjs/handler/index.cjs"
			}
		}
	},
	"scripts": {
		"prebuild": "rm -rf dist/*",
		"build": "tsc -b tsconfig.build.json && tsc -b tsconfig.build.cjs.json && npm run build-handler",
		"build-handler": "npx tsup --config tsup.config.cjs.ts --tsconfig tsconfig.tsup.json && npx tsup --config tsup.config.esm.ts --tsconfig tsconfig.tsup.json",
		"postbuild": "npm run alias && npm run makepackage",
		"alias": "tsc-alias -p tsconfig.alias.json --outDir dist/esm --verbose && tsc-alias -p tsconfig.alias.json --outDir dist/cjs --verbose",
		"makepackage": "echo '{\n  \"type\": \"module\"\n}' > dist/esm/package.json && echo '{\n  \"type\": \"commonjs\"\n}' > dist/cjs/package.json",
		"check": "npm run check:prettier && npm run check:lint && npm run check:skott",
		"check:lint": "npx eslint .",
		"check:prettier": "prettier --check .",
		"check:skott": "skott --displayMode=file-tree --showCircularDependencies --no-trackTypeOnlyDependencies --cwd src",
		"check:exports": "attw --pack .",
		"predocs": "npm run typedoc",
		"format": "prettier --write .",
		"prepack": "npm run check && npm run build && rm -rf build && mkdir build",
		"package": "npm pack --pack-destination ./build",
		"publish:local": "npm publish --registry http://localhost:4873",
		"test": "NO_COLOR=1 vitest --run",
		"test:watch": "vitest ${TEST_FILE:-tests} --pool=forks --watch --ui --open",
		"unpublish:local": "npm unpublish --registry http://localhost:4873 @monolayer/task-bullmq-adapter -f"
	},
	"dependencies": {},
	"devDependencies": {
		"@monorepo/eslint-config": "*",
		"@monorepo/typescript-config": "*",
		"@monorepo/utils": "*",
		"@types/node": "^18.0.0",
		"@vitest/coverage-istanbul": "^2.1.9",
		"@vitest/coverage-v8": "^2.1.9",
		"@vitest/ui": "^2.1.9",
		"skott": "^0.33.2",
		"type-fest": "^4.10.1",
		"type-testing": "^0.2.0",
		"vitest": "^2.1.9",
		"case-anything": "^3.1.2",
		"@epic-web/remember": "^1.1.0",
		"@aws-sdk/client-sqs": "^3.797.0",
		"@aws-sdk/client-dynamodb": "^3.797.0",
		"testcontainers": "^10.24.2",
		"get-port": "^7.1.0",
		"@types/aws-lambda": "^8.10.149",
		"tiny-invariant": "^1.3.3",
		"tsup": "^8.4.0"
	}
}

{
	"extends": "./tsconfig.json",
	"include": ["src/**/*"],
	"compilerOptions": {
		"rootDir": "src",
		"outDir": "./dist/cjs",
		"tsBuildInfoFile": "./dist/cjs/tsconfig.build.tsbuildinfo",
		"composite": false,
		"emitDeclarationOnly": false,
		"declaration": true,
		"sourceMap": false,
		"target": "es2020",
		"module": "CommonJS",
		"moduleResolution": "Node",
		"paths": {
			"~sidecar/*": ["src/*"]
		}
	},
	"references": []
}

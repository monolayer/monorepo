{
	"compilerOptions": {
		"strict": true,
		"outDir": "bin",
		"target": "ES2022",
		"module": "NodeNext",
		"moduleResolution": "nodenext",
		"sourceMap": true,
		"experimentalDecorators": true,
		"pretty": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitReturns": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["**/src/**/*.ts"],
	"exclude": ["node_modules", "dist"]
}

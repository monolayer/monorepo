{
	"name": "@monolayer/nextjs-lambda-adapter",
	"version": "4.0.4",
	"description": "AWS Lambda adapter for Next.js applications.",
	"author": "Marcos Essindi <marcessindi@me.com>",
	"license": "MIT",
	"homepage": "https://github.com/monolayer/monorepo/tree/main/packages/nextjs-lambda-adapter",
	"bugs": "https://github.com/monolayer/monorepo/issues",
	"repository": {
		"type": "git",
		"url": "https://github.com/monolayer/monorepo/",
		"directory": "packages/nextjs-lambda-adapter"
	},
	"bin": {
		"nextjs-lambda-adapter": "./dist/cli/index.js"
	},
	"type": "module",
	"files": [
		"dist/**/*.js",
		"dist/**/*.mjs"
	],
	"scripts": {
		"prebuild": "rm -rf dist/*",
		"build": "npm run build:cli && npm run build:adapter",
		"build:cli": "tsc",
		"build:adapter": "tsx build-adapter.ts",
		"postbuild": "npm run postbuild:makeexec && npm run postbuild:package-cache-handler",
		"postbuild:makeexec": "chmod +x dist/cli/index.js",
		"postbuild:package-cache-handler": "cp adapter/cache-handler.mjs dist/adapter/cache-handler.mjs",
		"check": "npm run check:prettier && npm run check:lint",
		"check:lint": "npx eslint .",
		"check:prettier": "prettier --check .",
		"format": "prettier --write .",
		"prepack": "npm run check && npm run build && rm -rf build && mkdir build",
		"package": "npm pack --pack-destination ./build",
		"publish:local": "npm publish --registry http://localhost:4873",
		"test": "NO_COLOR=1 vitest --run --passWithNoTests",
		"test:watch": "vitest ${TEST_FILE:-tests} --pool=forks --watch --ui --open",
		"unpublish:local": "npm unpublish --registry http://localhost:4873 @monolayer/nextjs-lambda-adapter -f"
	},
	"dependencies": {
		"@monolayer/dw": "^1.1.1"
	},
	"devDependencies": {
		"@monorepo/docker": "*",
		"@monorepo/eslint-config": "*",
		"@monorepo/typescript-config": "*",
		"@types/node": "^20.0.0",
		"@vitest/coverage-istanbul": "^3.1.4",
		"@vitest/coverage-v8": "^3.1.4",
		"@vitest/ui": "^3.1.4",
		"vitest": "^3.1.4",
		"@aws-sdk/client-s3": "^3.777.0",
		"@aws-sdk/client-dynamodb": "^3.777.0",
		"@aws-sdk/util-utf8-node": "^3.259.0",
		"testcontainers": "^10.23.0",
		"esbuild": "^0.25.4",
		"undici": "^7.10.0",
		"tsx": "^4.19.4"
	}
}

{
	"name": "@monolayer/workloads-reader",
	"version": "1.0.0-pre.20",
	"description": "Read defined workloads",
	"author": "Marcos Essindi <marcessindi@me.com>",
	"license": "MIT",
	"homepage": "https://github.com/monolayer/monorepo/issues",
	"bugs": "https://github.com/monolayer/monorepo/issues",
	"repository": {
		"type": "git",
		"url": "https://github.com/monolayer/monorepo/",
		"directory": "packages/workloads-reader"
	},
	"type": "module",
	"bin": {
		"workloads-reader": "dist/reader.js"
	},
	"files": [
		"dist/**/*.js",
		"dist/**/*.d.ts"
	],
	"scripts": {
		"prebuild": "rm -rf dist/*",
		"build": "tsup",
		"check": "npm run check:prettier && npm run check:lint && npm run check:skott",
		"check:lint": "npx eslint .",
		"check:prettier": "prettier --check .",
		"check:skott": "skott --displayMode=file-tree --showCircularDependencies --no-trackTypeOnlyDependencies --cwd src",
		"check:exports": "attw --pack .",
		"format": "prettier --write .",
		"prepack": "npm run check && npm run build && rm -rf build && mkdir build",
		"package": "npm pack --pack-destination ./build",
		"publish:local": "npm publish --registry http://localhost:4873",
		"unpublish:local": "npm unpublish --registry http://localhost:4873 @monolayer/workloads-reader -f"
	},
	"dependencies": {
		"typescript": "^5.7.3",
		"object.groupby": "^1.0.3",
		"@monolayer/dw": "^1.1.1"
	},
	"devDependencies": {
		"@types/node": "^20.0.0",
		"@types/object.groupby": "^1.0.4",
		"tsup": "^8.3.6",
		"@vitest/coverage-istanbul": "^2.1.9",
		"@vitest/coverage-v8": "^2.1.9",
		"@vitest/ui": "^2.1.9",
		"vitest": "^2.1.9"
	}
}
